#:kivy 1.0.9

<Gui>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # White background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.6
            BoxLayout:
                id: science_data_layout
                orientation: 'vertical'
                padding: [10, 20]
                spacing: 5
                Label:
                    text: "Science Data"
                    color: 0, 0, 0, 1  # Black text
            BoxLayout:
                id: pose_data_layout
                orientation: 'vertical'
                padding: [10, 20]
                spacing: 5
                Label:
                    text: "Pose Data"
                    color: 0, 0, 0, 1  # Black text
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    id: misc_data_layout
                    orientation: 'vertical'
                    padding: [10, 20]
                    spacing: 5
                    Label:
                        text: "Misc Data"
                        color: 0, 0, 0, 1  # Black text
                BoxLayout:
                    id: wod_info_layout
                    orientation: 'vertical'
                    size_hint_y: 0.1
                    padding: [10, 20]
                    spacing: 5

        BoxLayout:
            id: plot_box
            size_hint_y: 0.3
