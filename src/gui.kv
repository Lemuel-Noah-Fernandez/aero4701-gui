#:kivy 1.0.9

<Gui>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # White background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: [10, 10]
        spacing: 10

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.4
            padding: [10, 10]
            spacing: 10

            BoxLayout:
                id: science_data_layout
                orientation: 'vertical'
                padding: [10, 10]
                spacing: 5
                Label:
                    text: "Science Data"
                    color: 0, 0, 0, 1  # Black text
                    font_size: '20sp'
                    bold: True
                GridLayout:
                    cols: 1
                    id: science_data_labels
                    padding: [10, 10]
                    spacing: 5

            BoxLayout:
                id: pose_data_layout
                orientation: 'vertical'
                padding: [10, 10]
                spacing: 5
                Label:
                    text: "Pose Data"
                    color: 0, 0, 0, 1  # Black text
                    font_size: '20sp'
                    bold: True
                GridLayout:
                    cols: 1
                    id: pose_data_labels
                    padding: [10, 10]
                    spacing: 5

            GridLayout:
                cols: 2
                rows: 2
                padding: [10, 10]
                spacing: 10

                BoxLayout:
                    id: lidar1
                    orientation: 'vertical'
                    padding: [10, 10]
                    spacing: 5

                BoxLayout:
                    id: lidar2
                    orientation: 'vertical'
                    padding: [10, 10]
                    spacing: 5

                BoxLayout:
                    id: lidar3
                    orientation: 'vertical'
                    padding: [10, 10]
                    spacing: 5

                BoxLayout:
                    id: lidar4
                    orientation: 'vertical'
                    padding: [10, 10]
                    spacing: 5

        BoxLayout:
            id: plot_box
            size_hint_y: 0.4
            padding: [10, 10]
            spacing: 10
